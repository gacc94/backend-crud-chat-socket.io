{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "sourceMap": true,
        "resolveJsonModule": true,
        "incremental": true,
        "moduleResolution": "Node",
        "baseUrl": "./src",
        "outDir": "./dist",
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "./src",
        "paths": {
            "@routes/*": ["src/routes/*"],
            "@controller/*": ["src/controller/*"],
            "@config/*": ["src/config/*"]
        },
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/**.ts",
        "tests/**/**.ts",
        "playground/**/**.ts"
    ]
}